<local:BasePage x:TypeArguments="local:BookViewModel" x:Class="Epub_Reader_TTS.BookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Epub_Reader_TTS"
      mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Grid.Row="0"
            Orientation="Horizontal">

            <Button 
                Command="{Binding PlayCommand}" 
                VerticalAlignment="Center"
                Margin="10"
                Padding="10">Play</Button>

            <Button 
                Command="{Binding PauseCommand}" 
                VerticalAlignment="Center"
                Margin="10"
                Padding="10">Pause</Button>

            <Button 
                Command="{Binding StopCommand}" 
                VerticalAlignment="Center"
                Margin="10"
                Padding="10">Stop</Button>
        </StackPanel>


        <ContentControl 
            Grid.Row="1"
            Content="{Binding CurrentPage,Converter={local:BookPageConverter}}"/>
    </Grid>
</local:BasePage>
