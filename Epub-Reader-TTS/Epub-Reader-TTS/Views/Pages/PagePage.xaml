<local:BasePage x:TypeArguments="local:PageViewModel" x:Class="Epub_Reader_TTS.PagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Epub_Reader_TTS"
      mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding ParagraphViewModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:IndexHighlightTextBlock 
                        Margin="10"     
                        Text="{Binding ParagraphText}"
                        HighlightIndex="{Binding WordIndex}"
                        HighlightLength="{Binding WordLength}"
                        IsActive="{Binding Active}"
                        FontSize="18"
                        HighlightBackground="LightPink"
                        HighlightForeground="Black" 
                        TextWrapping="Wrap"
                        />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</local:BasePage>
